<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="269dp"

        android:ems="10"
        android:id="@+id/LeaderboardTextView"
        android:layout_x="0dp"
        android:layout_y="100dp"
        android:background="#b8860b"
        android:text="User 1"
        android:textColor="#000000"
        android:layout_row="22"
        android:layout_column="1"
        android:layout_below="@+id/buttonLeaderonleaderboard"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="LeaderBoard"
            android:id="@+id/textView6"
            android:background="#b8860b"
            android:textSize="40sp"
            android:textColor="#000000"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/buttonLeaderonleaderboard"
            android:layout_x="0dp"
            android:layout_y="471dp"
            android:layout_weight="0.16"
            android:background="#b8860b"
            android:textSize="40sp"
            android:layout_row="22"
            android:layout_column="6"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Daily"
            android:id="@+id/daily"
            android:layout_y="396dp"
            android:textColor="#000000"
            android:background="#b8860b"
            android:allowUndo="true"
            android:layout_gravity="bottom"
            android:layout_row="22"
            android:layout_column="0"
            android:layout_alignTop="@+id/weekly"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Weekly"
            android:id="@+id/weekly"
            android:background="#b8860b"
            android:layout_column="2"
            android:layout_marginBottom="22dp"
            android:layout_above="@+id/buttonLeaderonleaderboard"
            android:layout_toRightOf="@+id/daily"
            android:layout_toEndOf="@+id/daily"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="29dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="Monthly"
            android:id="@+id/monthly"
            android:layout_x="200dp"
            android:layout_y="399dp"
            android:background="#b8860b"
            android:layout_gravity="center_horizontal"
            android:layout_row="22"
            android:layout_column="4"
            android:layout_alignTop="@+id/weekly"
            android:layout_toRightOf="@+id/weekly"
            android:layout_toEndOf="@+id/weekly"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="42dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="All Time"
            android:id="@+id/allTime"
            android:layout_x="290dp"
            android:layout_y="399dp"
            android:allowUndo="false"
            android:background="#b8860b"
            android:layout_gravity="right"
            android:layout_row="3"
            android:layout_column="4"
            android:layout_alignTop="@+id/monthly"
            android:layout_toRightOf="@+id/monthly"
            android:layout_toEndOf="@+id/monthly"
            android:layout_marginLeft="6dp" />

    </RelativeLayout>


</AbsoluteLayout>
